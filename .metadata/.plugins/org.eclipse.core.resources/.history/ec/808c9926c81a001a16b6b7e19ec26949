package genePlay;

/**
 * @author bourk
 *
 */
import java.util.Random;

public class TestSubject {
	
	private int[] eyeColour = new int[4];
	Random ran = new Random();
	int colour1 = 0;
	int colour2 = 1;

	public TestSubject(){
		for(int i = 0; i<eyeColour.length; i++){
			int choice = ran.nextInt(1);
			eyeColour[i] = choice;
			}
		}

	public TestSubject(int[] eyeColour){
		this.eyeColour = eyeColour;
		}

	public void displayEyeColour(){
		System.out.println(eyeColour.toString());
		}

	public int[] getEyeColour(){
		return eyeColour;
		}

}
